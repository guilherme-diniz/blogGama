<% title 'Pense Eventos - O seu blog sobre produção de eventos' %>
<% meta_tag :title,  'Pense Eventos' %>
<% meta_tag :description, 'Seu blog sobre produção de eventos' %>
<% meta_tag :description_twitter, 'Seu blog sobre produção de eventos'  %>
<% meta_tag :url, request.original_url%>
<% meta_tag :image, '/assets/banner_blog_v1.jpg' %>
<div class="container">
		<% @posts.each_with_index do |post,i| %>
                  <div class="row">
      			     <div class="col-sm-12 home-post">
      				<img src="<%= post.main_image(:big) %>" class="img-responsive">
      				<h3 class="post-title"><%= link_to "#{post.title}", posts_show_path(post.id) %></h3>
      				<span class="nome-autor-e-data">Por <%= post.author %> |<%= PostsHelper.string_posted_time post %> atrás </span>
      				<p class="descricao-post"><%= truncate(post.description, length: 440, omission: '...', escape: false) %></p>
      				<%= link_to "Continue lendo", posts_show_path(post.id), class: "btn btn-primary btn-fixo-continuelendo" %>
      			     </div>
                  </div>
		<% end -%>
</div>

<button type="button" style="display: none;" id="hellobar" class="btn btn-primary success" data-toggle="modal" data-target="#myModal"></button>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog" role="document">
      		<div class="modal-content">
        		<div class="modal-header">
          			<button type="button" class="close" data-dismiss="modal"aria-label="Close">
            				<span aria-hidden="true">&times;</span>
          			</button>
          			<h4 class="modal-title" id="myModalLabel">Bem Vindo/a!</h4>
        		</div>
		       <div class="modal-body">
		             <div class="form-group">
		             	Quer lembrar de tudo e ter um passo a passo para organizar um evento de sucesso? <strong>Baixe aqui nosso Checklist!</strong>
		             </div>
		       </div>
        		<div class="modal-footer">
          			<%= link_to "Eu Quero", "/baixe-aqui-seu-checklist-para-eventos",class: "btn btn-primary" %>
          			<button type="button" class="btn btn-default"data-dismiss="modal">Não, Obrigado</button>
        		</div>
      		</div>
	</div>
</div>
<script>
	$(document).ready(function() {
		 setTimeout(function(){
	    		$("#hellobar").click();
    		}, 2000);
	});
</script>
