<!DOCTYPE html>
<html>
<head>
  <title>
      <%= if content_for?(:title) then yield(:title) end %>
  </title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="index,follow">
    <meta name="author" content="">
    <meta name="description" content="">
    <!-- Open Graph data -->
    <meta property="og:title" content="<%= yield_meta_tag(:title, '') %>" />
    <meta property="og:type" content="article" />
    <meta property="og:url" content=<%= yield_meta_tag(:url, 'http://www.penseventos.com.br') %> />
    <meta property="og:image" content=<%= yield_meta_tag(:image, '') %> />
    <meta property="og:description" content=<%= yield_meta_tag(:description, 'Sem descrição') %> />
    <meta property="og:site_name" content="PensEventos" />
    <meta property="fb:admins" content="Facebook numeric ID" />
    <!-- Twitter Card data -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="@publisher_handle">
    <meta name="twitter:title" content=<%= yield_meta_tag(:description, 'Sem descrição') %>>
    <meta name="twitter:description" content=<%= yield_meta_tag(:description_twitter, 'Default description') %>>
    <meta name="twitter:creator" content="@author_handle">
    <!-- Twitter Summary card images must be at least 120x120px -->
    <meta name="twitter:image" content=<%= yield_meta_tag(:image, '') %>>
    <!-- HTML5 shiv and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body class="<%= request.original_url.include?("baixe-aqui")  ? 'landing' :
request.original_url.include?("obrigado") ? 'muitoobrigado' :
request.original_url.include?("descubra-quem") ? 'testes' : 'no-tag'%>">
<% if request.original_url.include?("admin") %>
    <a href="<%= root_path%>"><img src="/assets/logo_pense_eventos-02.png" class="logo-admin"></a>
<% elsif request.original_url.include?("baixe-aqui") || request.original_url.include?("obrigado") ||
request.original_url.include?("descubra-quem") %>
<header class="header-blog<%= current_page?(root_path) ? '' : '-interna' %>" style="background: none;">
      <a href="<%= root_path%>">
          <%= image_tag "logo_pense_eventos-02.png" , class: 'logo' %>
      </a>
</header>
<% else %>
<header class="header-blog<%= current_page?(root_path) ? '' : '-interna' %>">
      <a href="<%= root_path%>">
          <%= image_tag "logo_pense_eventos-02.png" , class: 'logo' %>
      </a>
</header>
<% end -%>
    <%= yield %>
<% if not request.original_url.include?("admin") and not request.original_url.include?("baixe-aqui") and not request.original_url.include?("obrigado") and not request.original_url.include?("descubra-quem")  %>
    <footer>
    </footer>
<% end -%>
</body>

